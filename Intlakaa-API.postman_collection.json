{
    "info": {
        "name": "Intlakaa Backend API",
        "description": "Complete API collection for Intlakaa backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('token', response.token);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"owner@intlakaa.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admins/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admins",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Admin Management",
            "item": [
                {
                    "name": "Invite Admin",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"New Admin\",\n  \"email\": \"admin@example.com\",\n  \"role\": \"admin\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admins/invite",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admins",
                                "invite"
                            ]
                        }
                    }
                },
                {
                    "name": "Verify Invite",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/admins/verify-invite?token=YOUR_INVITE_TOKEN",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admins",
                                "verify-invite"
                            ],
                            "query": [
                                {
                                    "key": "token",
                                    "value": "YOUR_INVITE_TOKEN"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Accept Invite",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"token\": \"YOUR_INVITE_TOKEN\",\n  \"password\": \"newpassword123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admins/accept-invite",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admins",
                                "accept-invite"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Admins",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/admins",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admins"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Admin",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/admins/ADMIN_ID",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admins",
                                "ADMIN_ID"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Requests",
            "item": [
                {
                    "name": "Create Request (Public)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Ahmed Ali\",\n  \"phone\": \"+201234567890\",\n  \"store_url\": \"https://example.com\",\n  \"monthly_salary\": 5000\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/requests",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "requests"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Requests",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/requests",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "requests"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Single Request",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/requests/REQUEST_ID",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "requests",
                                "REQUEST_ID"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Request",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/requests/REQUEST_ID",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "requests",
                                "REQUEST_ID"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/health",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            }
        }
    ]
}